#!/bin/bash
export RUNZSH=no

if [[ -n $CI ]]; then 
    export CHSH=no
fi

# Install Homebrew
if test -d ~/.oh-my-zsh; then
  echo "🐢 oh-my-zsh already installed...moving on"
else
  echo '🐢  Installing oh-my-zsh'
  sh -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
fi
