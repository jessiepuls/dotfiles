asdf plugin add terragrunt
asdf plugin add nodejs
asdf plugin-add java
. ~/.asdf/plugins/java/set-java-home.zsh

# reshim asdf in case there were updates
rm -rf ~/.asdf/shims && asdf reshim

# Install tools
asdf install


# Pip packages

