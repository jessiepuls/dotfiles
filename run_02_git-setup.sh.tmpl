#!/bin/sh

FILE=~/.ssh/id_rsa_github
if [ ! -f "$FILE" ]; then
    echo "ðŸ’» Setting up ssh key for github"

    # create an ssh key
    ssh-keygen -f ~/.ssh/$FILE -q -N ""

    # sign into github
    gh auth login -s admin:public_key --web

    echo "Enter a name for this key:"
    read key_name

    # push key into github and prompt for a name
    gh ssh-key add ~/.ssh/$FILE.pub --title $key_name
fi